<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="@string/currency_from"
            android:drawableLeft="@drawable/ic_currency"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#4D4D4D"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="16dp"
            android:id="@+id/currency_from"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/round_button_all"
            android:layout_marginTop="30dp" />
    <Button
            android:text="@string/currency_to"
            android:layout_toRightOf="@+id/currency_from"
            android:background="@drawable/round_button_all"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#4D4D4D"
            android:drawableLeft="@drawable/ic_currency"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:id="@+id/currency_to"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currency_to"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:text="@string/quantity"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="164dp"
        android:layout_height="36dp"
        android:layout_below="@+id/quantity"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button_all"
        android:backgroundTint="#d2d8f9"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="#333333"
        android:paddingLeft="16dp"
        android:text="@string/calculate_button"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
            android:id="@+id/text_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_last_update"
            android:textSize="10sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="200dp"
            android:layout_below="@+id/calculate_button"
            android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/calculate_button"
        android:layout_toRightOf="@id/text_last_update"
        android:background="@drawable/round_button_all"
        android:backgroundTint="#d2d8f9"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="10sp"
        android:text="@string/update_button" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/update_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/result"
        android:textSize="20sp" />

    <Button
        android:id="@+id/change"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/currency_from"
        android:background="@drawable/round_button_all"
        android:drawableLeft="@drawable/ic_change_1" />
</RelativeLayout>